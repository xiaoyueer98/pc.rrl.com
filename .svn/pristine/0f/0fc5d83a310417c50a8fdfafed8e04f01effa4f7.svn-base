                                if (data.code != "200") {
                                    $("#salonBtn")[0].disabled = false;
                                    $("#salonError").show();
                                    $("#salonError span em").html(data.msg);
                                    return;
                                } else {
                                    alert(data.msg);
                                    location.href = "/Home/Active/salon_show";
                                }
                            }, "json");
                        }
                    }, "json");

                }
            })
