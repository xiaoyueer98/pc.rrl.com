    <script type="text/javascript">
        function checkuseres() {
            var username = $("#fusername").val();
            var flag = $("#fflag").val();
            if (!username) {
                $('.mask').show();
                $('.dlpd').show();
                return false;
            }
            if (flag == 1) {
                $("#errmsg").html("您是企业账号，请登录推荐人账号再试！");
                $('.mask').show();
                $('.dlpd').show();
                return false;
            }
        }
        $('.dlpd .quxiao').on('click',function(){
            $('.mask').hide();
            $('.dlpd').hide();
        })
        function userfavorite()
        {
            var jobid = $("#jobid").val();
            $.ajax({
                url: "__URL__/aaa",
                data: {"jobid": jobid},
                type: "post",
                success: function(vic)
                {
                    if (vic == "ok")
                    {
                        sys_window("关注成功");
                    }
                    else if (vic == "no")
                    {
                        sys_window("关注失败");
                    }
                    else if (vic == "ceng")
                    {
                        sys_window("已关注过");
                    }
                }

            })
        }
        
    </script>
