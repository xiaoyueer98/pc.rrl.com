<script type="text/javascript">
    function addbackinfo()
    {
        var bankname = $("#bankname").val();
        var banknumber = $("#banknumber").val();
        if (!bankname) {
            sys_window("请输入收款银行！");
            return false;
        } else if (!banknumber) {
            sys_window("请输入收款账号！");
            return false;
        }
        $.ajax({
            url: "__URL__/addbackinfo",
            type: "post",
            data: {"bankname": bankname, "banknumber": banknumber},
            success: function(backmsg)
            {
                if (backmsg == "ok")
                {
                    window.location.reload();
                }
            }
        })
    }
</script>
