	background:url(http://gtms01.alicdn.com/tps/i1/T1iG48FDpfXXX8QSDI-400-340.png);
	background-image:-webkit-image-set(url(http://gtms01.alicdn.com/tps/i1/T1iG48FDpfXXX8QSDI-400-340.png) 1x,url(http://gtms04.alicdn.com/tps/i4/T1LX06Fw8iXXcaXwo7-800-680.png) 2x);
	background-image:-moz-image-set(url(http://gtms01.alicdn.com/tps/i1/T1iG48FDpfXXX8QSDI-400-340.png) 1x,url(http://gtms04.alicdn.com/tps/i4/T1LX06Fw8iXXcaXwo7-800-680.png) 2x);
	background-image:-ms-image-set(url(http://gtms01.alicdn.com/tps/i1/T1iG48FDpfXXX8QSDI-400-340.png) 1x,url(http://gtms04.alicdn.com/tps/i4/T1LX06Fw8iXXcaXwo7-800-680.png) 2x);
	background-image:-o-image-set(url(http://gtms01.alicdn.com/tps/i1/T1iG48FDpfXXX8QSDI-400-340.png) 1x,url(http://gtms04.alicdn.com/tps/i4/T1LX06Fw8iXXcaXwo7-800-680.png) 2x);
